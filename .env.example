# Physical AI & Humanoid Robotics Platform
# Environment Variables Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE (Neon PostgreSQL)
# =============================================================================
# Get your connection string from https://neon.tech
DATABASE_URL=postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/dbname?sslmode=require

# =============================================================================
# VECTOR STORE (Qdrant Cloud)
# =============================================================================
# Get your credentials from https://cloud.qdrant.io
QDRANT_URL=https://xxx.us-east-1-0.aws.cloud.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key

# =============================================================================
# AI SERVICES
# =============================================================================
# OpenAI - for embeddings and chat (https://platform.openai.com)
OPENAI_API_KEY=sk-xxx

# Anthropic - for Urdu translation (https://console.anthropic.com)
ANTHROPIC_API_KEY=sk-ant-xxx

# =============================================================================
# AUTHENTICATION (BetterAuth)
# =============================================================================
# Generate a random 32+ character string for production
# Example: openssl rand -base64 32
BETTER_AUTH_SECRET=change-this-to-a-random-32-char-string
BETTER_AUTH_URL=http://localhost:3000

# =============================================================================
# FRONTEND
# =============================================================================
# Backend API URL for frontend to connect
NEXT_PUBLIC_API_URL=http://localhost:8000

# =============================================================================
# BACKEND
# =============================================================================
# Environment mode: development, staging, production
ENVIRONMENT=development

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Server configuration
HOST=0.0.0.0
PORT=8000
